# Linguística do GitHub - configurar detecção de linguagem
*.gradle linguist-language=Gradle
*.gradle.kts linguist-language=Kotlin
build.gradle linguist-generated=true
build.gradle.kts linguist-generated=true
gradlew linguist-generated=true
gradlew.bat linguist-generated=true
gradle/wrapper/* linguist-generated=true

# Maven wrapper
mvnw linguist-generated=true
mvnw.cmd linguist-generated=true
.mvn/wrapper/* linguist-generated=true

# Arquivos gerados - excluir das estatísticas do GitHub
target/* linguist-generated=true
build/* linguist-generated=true
out/* linguist-generated=true
*.class linguist-generated=true
*.log linguist-generated=true

# Arquivos de IDE - excluir das estatísticas
.idea/* linguist-generated=true
.vscode/* linguist-generated=true
*.iml linguist-generated=true
.project linguist-generated=true
.classpath linguist-generated=true
.settings/* linguist-generated=true

# Documentação gerada
docs/api/* linguist-documentation=true
javadoc/* linguist-documentation=true